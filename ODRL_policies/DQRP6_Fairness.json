{
    "@context": {
        "odrl:operator": {
            "@type": "@id"
        },
        "@base": "http://www.semanticweb.org/acraf/ontologies/2024/healthmesh/",
        "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
        "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
        "xsd": "http://www.w3.org/2001/XMLSchema#",
        "odrl": "http://www.w3.org/ns/odrl/2/",
        "dcat": "http://www.w3.org/ns/dcat#",
        "dqv": "http://www.w3.org/ns/dqv#",
        "tb": "http://www.semanticweb.org/acraf/ontologies/2024/healthmesh/tbox#",
        "ab": "http://www.semanticweb.org/acraf/ontologies/2024/healthmesh/abox#",
        "prov": "http://www.w3.org/ns/prov#",
        "qudt": "http://qudt.org/schema/qudt/"
    },
    "@graph": [
        {
            "@id": "ab:DQRP6",
            "@type": "dqv:QualityPolicy",
            "rdfs:label": "DQRP6 - Fairness Requirement",
            "rdfs:comment": "Data Quality Requirement Pattern 6: Entity composition includes groups in appropriate proportions. Gender must be exactly 50% / 50%.",
            "tb:derivedFrom": "DQRP6",
            "tb:qualityDimension": "Fairness",
            "tb:sourceEntity": {
                "@id": "ab:DataSpaceGovernanceAuthority"
            },
            "odrl:permission": [
                {
                    "@id": "ab:DQRP6_Permission",
                    "@type": "odrl:Permission",
                    "rdfs:comment": "Data may only be distributed if represented groups are balanced (max representation is exactly 50%)",
                    "odrl:action": "odrl:distribute",
                    "odrl:assigner": {
                        "@id": "ab:DataSpaceGovernanceAuthority"
                    },
                    "odrl:assignee": {
                        "@id": "ab:DataProvider"
                    },
                    "odrl:target": {
                        "@id": "ab:Sex"
                    },
                    "odrl:constraint": [
                        {
                            "@id": "ab:DQRP6_Constraint",
                            "@type": "odrl:Constraint",
                            "rdfs:comment": "The maximum group representation must be exactly 50",
                            "odrl:leftOperand": {
                                "@id": "ab:FairnessMeasurement",
                                "@type": "dqv:QualityMeasurement"
                            },
                            "odrl:operator": "odrl:eq",
                            "odrl:rightOperand": {
                                "@value": "50",
                                "@type": "xsd:integer"
                            },
                            "odrl:unit": {
                                "@id": "qudt:PERCENT"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "@id": "ab:FairnessMeasurement",
            "@type": "dqv:Metric",
            "rdfs:label": "Fairness Measurement",
            "rdfs:comment": "Measures the maximum percentage representation of any discrete group in an attribute",
            "dqv:isMeasurementOf": {
                "@id": "ab:qM_Fairness"
            }
        },
        {
            "@id": "ab:Fairness",
            "@type": "dqv:Metric",
            "rdfs:label": "Fairness Metric (Abstract)",
            "dqv:inDimension": {
                "@id": "ab:FairnessDimension",
                "@type": "dqv:Dimension"
            }
        },
        {
            "@id": "ab:FairnessDimension",
            "@type": "dqv:Dimension",
            "rdfs:label": "Fairness (Automated data validation in ML systems)"
        },
        {
            "@id": "ab:Sex",
            "@type": "odrl:Asset",
            "odrl:partOf": {
                "@id": "ab:EHDS_Patient_Summary"
            }
        }
    ]
}