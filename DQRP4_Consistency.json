{
    "@context": { "odrl:operator": { "@type": "@id" },
        "@base": "http://www.semanticweb.org/acraf/ontologies/2024/healthmesh/",
        "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
        "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
        "xsd": "http://www.w3.org/2001/XMLSchema#",
        "odrl": "http://www.w3.org/ns/odrl/2/",
        "dcat": "http://www.w3.org/ns/dcat#",
        "dqv": "http://www.w3.org/ns/dqv#",
        "tb": "http://www.semanticweb.org/acraf/ontologies/2024/healthmesh/tbox#",
        "ab": "http://www.semanticweb.org/acraf/ontologies/2024/healthmesh/abox#",
        "prov": "http://www.w3.org/ns/prov#"
    },
    "@graph": [
        {
            "@id": "ab:DQRP4",
            "@type": "dqv:QualityPolicy",
            "rdfs:label": "DQRP4 - Consistency Requirement",
            "rdfs:comment": "Data Quality Requirement Pattern 4: Values of an attribute must fulfill rule R (cross-attribute consistency)",
            "tb:derivedFrom": "DQRP4",
            "tb:qualityDimension": "Consistency",
            "odrl:duty": [
                {
                    "@id": "ab:DQRP4_Duty",
                    "@type": "odrl:Duty",
                    "rdfs:comment": "Survival_from_surgery_days must be greater than 0 when patient is Deceased",
                    "odrl:target": {
                        "@id": "ab:Survival"
                    },
                    "odrl:constraint": [
                        {
                            "@id": "ab:DQRP4_Constraint",
                            "@type": "odrl:Constraint",
                            "rdfs:comment": "Cross-attribute consistency: Deceased patients must have survival days > 0",
                            "odrl:leftOperand": {
                                "@id": "ab:CheckConsistency"
                            },
                            "odrl:operator": "odrl:eq",
                            "odrl:rightOperand": {
                                "@value": "true",
                                "@type": "xsd:boolean"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}